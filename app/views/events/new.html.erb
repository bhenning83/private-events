<h2>Create a New Event</h2>

<%= link_to 'Back to your events', user_path(current_user.id) %>

<%= form_for @event, url: new_event_path do |f| %>
  <p>
    <%= f.label :name, "What's the name of your event?" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location, 'Where is it located?' %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date, 'When is it?' %><br />
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label :description, 'Write a fun description for your event.' %><br />
    <%= f.text_field :description %>
  </p>
  <p>Event created by: <%= current_user.name %></p>
  
  <%= f.submit %>

<% end %>
